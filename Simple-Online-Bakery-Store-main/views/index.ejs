				<p id="username11">Confirm Password:</p>
				<input type="password"id="conpass" name="passwordConf" placeholder="Confirm Password" required="" class="form-control"><br/>
				<input type="submit" id="submit1" value="Register" class="btn btn-success">
				<a href="/login" id="aaa">Already Registered!</a>
				<div class="mssg bg-danger">
					<span id="check"></span>
